@{
    User adminUser = (Session["UserAccount"] != null) ? (User)Session["UserAccount"] : null;
    string userName = (adminUser == null ? "" : adminUser.Name);
    var appPath = Convert.ToString(ApplicationInstance.Application["ApplicationPath"]);
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Schaeffler | CMS</title>
    <link rel="stylesheet" type="text/css" href="@appPath/Contents/Admin/css/common.css">
    <script src="@appPath/Contents/Admin/js/jquery-3.4.1.min.js"></script>
    <script src="@appPath/Contents/Admin/js/common.js" type="text/javascript"></script>
    <!-- MaxCDN Bootstrap plugins -->
    <script src=""@appPath/Contents/Admin/js/bootstrap/bootstrap.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <link rel="stylesheet" href="@appPath/Content/Admin/js/fancybox/jquery.fancybox.min.css" />
    <script src="@appPath/Content/Admin/js/fancybox/jquery.fancybox.min.js"></script>
    @RenderSection("Style", false)
</head>

<body>
    <div class="wrapper">
        <header>
            <img class="logo" src="@appPath/Contents/Admin/images/logo.jpg" alt="Schaeffler">
            <nav>
                <ul>
                    <li><a href="@appPath/Admin/Home/Index">Export File</a></li>
                </ul>
                <div class="rightdetails">
                    <div class="logout"><a href="@appPath/Admin/Login/Logout">Logout</a></div>
                    <div class="setting"><a href="@appPath/Admin/User/ChangePassword">Profile Settings</a></div>
                    <div class="profile">Welcome, @userName</div>
                </div>
                <div class="clear"></div>
            </nav>
        </header>
        @RenderBody()

        <footer>Copyright © Schaeffler. All Rights Reserved.</footer>
        <script type="text/javascript">
		var apppath = '@ApplicationInstance.Application["ApplicationPath"]';
        </script>

        @RenderSection("Popup", false)


        @RenderSection("Script", false)
</body>
</html>
